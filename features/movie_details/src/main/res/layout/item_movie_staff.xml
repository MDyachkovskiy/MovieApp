<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/persons_item_width"
    android:layout_height="@dimen/persons_item_height"
    android:layout_margin="@dimen/margin_10dp_small"
    android:elevation="@dimen/margin_10dp_small"
    app:cardCornerRadius="@dimen/corner_radius_10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/person_poster"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:scaleType="fitXY"
            android:src="@drawable/person_placeholder"
            tools:ignore="ContentDescription" />

        <TextView
            style="@style/movie_staff_name_style"
            android:id="@+id/tv_person_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/actor_name_mock"
            android:gravity="center"/>

        <TextView
            style="@style/movie_staff_profession_style"
            android:id="@+id/tv_person_profession"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/actor_name_mock"
            android:gravity="center"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>