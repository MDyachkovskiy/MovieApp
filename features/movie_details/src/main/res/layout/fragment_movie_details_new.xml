<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fitsSystemWindows="true"
    tools:context="view.MovieDetailsFragmentNew"
    tools:ignore="contentDescription">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/abb_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.9">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/poster_end_guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="150dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/movie_poster_block"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_24dp_medium"
                    app:cardCornerRadius="@dimen/corner_radius_10dp"
                    app:layout_anchor="@id/background_image_block"
                    app:layout_anchorGravity="bottom|start"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/background_image_block"
                    app:layout_constraintBottom_toBottomOf="@id/background_image_block">

                    <ImageView
                        android:id="@+id/movie_poster"
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/default_placeholder" />

                </androidx.cardview.widget.CardView>

                <FrameLayout
                    android:id="@+id/background_image_block"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/movie_images_height"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.test.application.movie_details.custom_view.TopCropImageView
                        android:id="@+id/background_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/default_placeholder" />

                    <View
                        android:id="@+id/gradient_view"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="bottom"
                        android:background="@drawable/gradient_overlay" />

                </FrameLayout>

                <TextView
                    android:id="@id/tv_movie_title"
                    style="@style/movie_title_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_16dp_medium"
                    android:layout_marginEnd="@dimen/margin_16dp_medium"
                    android:gravity="start"
                    android:text="@string/movie_title_mock"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/poster_end_guideline"
                    app:layout_constraintTop_toBottomOf="@id/background_image_block" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_release_date"
                    style="@style/CustomSuggestionChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8dp_small"
                    android:layout_marginEnd="@dimen/margin_16dp_medium"
                    android:clickable="false"
                    android:text="@string/movie_release_date_mock"
                    app:layout_constraintEnd_toStartOf="@id/chip_movie_duration"
                    app:layout_constraintTop_toBottomOf="@id/tv_movie_title" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_movie_duration"
                    style="@style/CustomSuggestionChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_8dp_small"
                    android:layout_marginTop="@dimen/margin_8dp_small"
                    android:layout_marginEnd="@dimen/margin_16dp_medium"
                    android:clickable="false"
                    android:text="@string/movie_duration_mock"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_movie_title" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/imdb_rating_block"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8dp_small"
                    app:layout_constraintStart_toStartOf="@id/chip_release_date"
                    app:layout_constraintTop_toBottomOf="@id/chip_release_date">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/icon_imdb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="@dimen/margin_10dp_small"
                        app:cardCornerRadius="@dimen/margin_6dp_small"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:layout_width="@dimen/rating_site_icon_size"
                            android:layout_height="@dimen/rating_site_icon_size"
                            android:importantForAccessibility="no"
                            android:src="@drawable/ic_imdb" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/tv_tmdb_rating"
                        style="@style/rating_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_6dp_small"
                        android:text="@string/rating_mock"
                        app:layout_constraintStart_toEndOf="@id/icon_imdb"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_tmdb_votes_count"
                        style="@style/rating_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/margin_6dp_small"
                        android:text="@string/votes_number_mock"
                        app:drawableEndCompat="@drawable/ic_group"
                        app:drawableTint="@color/white"
                        app:layout_constraintStart_toStartOf="@id/tv_tmdb_rating"
                        app:layout_constraintTop_toBottomOf="@id/tv_tmdb_rating" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/kp_rating_block"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_16dp_medium"
                    app:layout_constraintStart_toEndOf="@id/imdb_rating_block"
                    app:layout_constraintTop_toTopOf="@id/imdb_rating_block">

                    <FrameLayout
                        android:id="@+id/icon_kp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_kp_rating"
                        android:padding="@dimen/margin_4dp_small"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:layout_width="29dp"
                            android:layout_height="29dp"
                            android:importantForAccessibility="no"
                            android:src="@drawable/ic_kp" />

                    </FrameLayout>

                    <TextView
                        android:id="@+id/tv_kp_rating"
                        style="@style/rating_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_6dp_small"
                        android:text="@string/rating_mock"
                        app:layout_constraintStart_toEndOf="@id/icon_kp"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_kp_votes_count"
                        style="@style/rating_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/margin_6dp_small"
                        android:text="@string/votes_number_mock"
                        app:drawableEndCompat="@drawable/ic_group"
                        app:drawableTint="@color/white"
                        app:layout_constraintStart_toStartOf="@id/tv_kp_rating"
                        app:layout_constraintTop_toBottomOf="@id/tv_kp_rating" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:layout_scrollFlags="scroll|enterAlways">

                <ImageView
                    android:id="@+id/back_button"
                    android:layout_width="@dimen/toolbar_icon_size"
                    android:layout_height="@dimen/toolbar_icon_size"
                    android:layout_margin="@dimen/margin_16dp_medium"
                    android:src="@drawable/ic_arrow_back"
                    app:tint="@color/white"
                     />

                <FrameLayout
                    android:id="@+id/favorite_background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:id="@+id/favorite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|end"
                        android:layout_marginEnd="@dimen/margin_8dp_small"
                        android:button="@drawable/selector_favorite_item" />

                </FrameLayout>

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16dp_medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tabMode="scrollable" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/movie_info_view_pager"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tab_layout" />

            <include
                android:id="@+id/video_container"
                layout="@layout/video_player_fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>